---
import { services } from '@data';

import ServiceCard from 'src/components/ServiceCard.astro';
---
<section class="container mx-auto px-4 sm:px-6 lg:px-8 pt-16">
    <h2 class="text-3xl text-neutral-900 font-semibold text-center pb-4">Nuestros servicios</h2>
    <p class="text-md text-neutral-800 text-center pb-12">Soluciones integrales de construcción y rehabilitación adaptadas a sus necesidades</p>
    <div class="w-full grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {
            services.map((service) => (
                <ServiceCard name={service.name} description={service.description} icon={service.icon} />
            ))
        }
    </div>
</section>