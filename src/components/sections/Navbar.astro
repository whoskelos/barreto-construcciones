---
import { menu } from "@data";
import { getCollection } from "astro:content";

import Logo from "@components/ui/Logo.astro";

const currentPath = Astro.url.pathname;

const services = await getCollection("services");

// Ordenar servicios según el orden original del menú si es necesario, o por defecto
// El orden en data.json era: Industrial, Rehabilitación, Residencial, Obra Civil, Mantenimiento
const order = ["industrial", "rehabilitacion", "residencial", "obra-civil", "mantenimiento"];
const sortedServices = services.sort((a, b) => {
    return order.indexOf(a.id) - order.indexOf(b.id);
});

interface SubMenuItem {
    name: string;
    link: string;
}

interface MenuItem {
    name: string;
    link: string;
    submenu?: SubMenuItem[];
}

const dynamicMenu: MenuItem[] = menu.map(item => {
    if (item.name === "Áreas de negocio") {
        return {
            name: item.name,
            link: item.link,
            submenu: sortedServices.map(service => ({
                name: service.data.title,
                link: `/areas-de-negocio/${service.id}`
            }))
        };
    }
    return item;
});
---

<nav class="w-full bg-white shadow-sm border-b border-neutral-200" role="navigation" aria-label="Navegación principal">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-20">
            <!-- Logo -->
            <div class="shrink-0">
                <a href="/" class="flex items-center">
                    <Logo
                        width={150}
                        height={50}
                        transition:persist="logo"
                    />
                </a>
            </div>

            <!-- Desktop Navigation -->
            <div class="hidden lg:flex lg:items-center lg:space-x-1 relative" id="desktop-nav">
                <div class="nav-bg-slider absolute rounded-lg bg-primary-50 transition-all duration-300 ease-out opacity-0"></div>
                {
                    dynamicMenu.map((item, index) => (
                        <div class="relative group">
                            <a
                                href={item.link}
                                data-nav-index={index}
                                class={`nav-link relative z-10 px-4 py-2 rounded-lg text-sm uppercase font-semibold tracking-wide transition-colors duration-200 flex items-center gap-1
                ${
                    currentPath === item.link
                        ? "text-primary-800"
                        : "text-neutral-900 hover:text-primary-800"
                }`}
                            >
                                {item.name}
                                {item.submenu && (
                                    <svg
                                        class="w-4 h-4 transition-transform duration-200 group-hover:rotate-180"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M19 9l-7 7-7-7"
                                        />
                                    </svg>
                                )}
                            </a>

                            {item.submenu && (
                                <div class="absolute left-0 pt-1 w-full opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
                                    <div class="bg-white rounded-lg shadow-lg border border-neutral-200 py-2 max-h-[80vh] overflow-y-auto">
                                        {item.submenu.map((subitem: SubMenuItem) => (
                                            <a
                                                href={subitem.link}
                                                class={`block px-4 py-3 transition-colors duration-150
                        ${
                            currentPath === subitem.link
                                ? "text-primary-600 bg-primary-50"
                                : "text-neutral-900 hover:text-primary-600 hover:bg-neutral-50"
                        }`}
                                            >
                                                <div class="text-sm uppercase font-semibold tracking-wide">
                                                    {subitem.name}
                                                </div>
                                            </a>
                                        ))}
                                    </div>
                                </div>
                            )}
                        </div>
                    ))
                }
            </div>

            <!-- Mobile menu button -->
            <div class="lg:hidden">
                <button
                    id="mobile-menu-button"
                    type="button"
                    class="inline-flex items-center justify-center p-2 rounded-lg text-neutral-900 hover:text-primary-600 hover:bg-neutral-50 transition-colors duration-200"
                    aria-expanded="false"
                >
                    <span class="sr-only">Abrir menú</span>
                    <svg
                        id="menu-icon"
                        class="block h-6 w-6"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                    <svg
                        id="close-icon"
                        class="hidden h-6 w-6"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
        </div>
    </div>

    <!-- Mobile menu -->
    <div id="mobile-menu" class="hidden lg:hidden border-t border-neutral-200 max-h-[70vh] overflow-y-auto" role="menu" aria-label="Menú de navegación móvil">
        <div class="px-4 py-4 space-y-1">
            {
                dynamicMenu.map((item) => (
                    <div>
                        {item.submenu ? (
                            <div>
                                <button
                                    class="mobile-submenu-button w-full flex items-center justify-between px-4 py-3 text-base font-semibold uppercase tracking-wider text-neutral-900 active:text-primary-600 active:bg-primary-100 rounded-lg transition-colors duration-150"
                                    data-submenu={item.name.toLowerCase()}
                                >
                                    {item.name}
                                    <svg
                                        class="submenu-arrow w-5 h-5 transition-transform duration-200"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M19 9l-7 7-7-7"
                                        />
                                    </svg>
                                </button>
                                <div
                                    class="mobile-submenu hidden pl-4 mt-1 space-y-1"
                                    data-submenu={item.name.toLowerCase()}
                                >
                                    {item.submenu.map((subitem: SubMenuItem) => (
                                        <a
                                            href={subitem.link}
                                            class={`block px-4 py-3 rounded-lg transition-colors duration-150
                      ${
                          currentPath === subitem.link
                              ? "text-primary-600 bg-primary-50"
                              : "text-neutral-900 active:text-primary-600 active:bg-primary-100"
                      }`}
                                        >
                                            <div class="text-sm font-semibold uppercase tracking-wider">
                                                {subitem.name}
                                            </div>
                                        </a>
                                    ))}
                                </div>
                            </div>
                        ) : (
                            <a
                                href={item.link}
                                class={`block px-4 py-3 text-base font-semibold uppercase tracking-wider rounded-lg transition-colors duration-150
                ${
                    currentPath === item.link
                        ? "text-primary-600 bg-primary-50"
                        : "text-neutral-900 active:text-primary-600 active:bg-primary-100"
                }`}
                            >
                                {item.name}
                            </a>
                        )}
                    </div>
                ))
            }
            
        </div>
    </div>
</nav>

<script src="../../scripts/navbar.ts"></script>

<style>
    /* Smooth transitions for dropdowns */

    .group:hover > div {
        display: block;
    }
</style>
