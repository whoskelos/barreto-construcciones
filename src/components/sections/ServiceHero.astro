---
import HeroImage from "@components/ui/HeroImage.astro";

interface Props {
    HeroImage: ImageMetadata;
    title: string;
    nameTransition: string;
    alt?: string;
}

const { HeroImage: heroImage, title, nameTransition, alt = "" } = Astro.props;
---

<section
    class="relative h-[300px] md:h-[40vh] md:min-h-[400px] flex items-center justify-center overflow-hidden bg-neutral-900"
>
    <div class="absolute inset-0">
        <HeroImage
            src={heroImage}
            alt={alt}
            transitionName={`img-${nameTransition}`}
            loading="eager"
            priority={true}
        />
    </div>

    <div
        class="relative z-10 container mx-auto px-4 sm:px-6 lg:px-8 text-start hero-content animate-fade-in-up opacity-0"
    >
        <div class="max-w-3xl">
            <p
                class="text-base sm:text-lg md:text-xl text-primary-500 font-semibold uppercase tracking-wider mb-3 md:mb-4"
            >
                Barreto Infraestructuras
            </p>
            <h1
                class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold mb-4 md:mb-6 text-white"
            >
                {title}
            </h1>
        </div>
    </div>
</section>

<style>
    /* Mejora la transición de la imagen */
    img {
        transition: filter 0.5s ease-out;
    }

    /* Respeto por preferencias de animación reducida */
    @media (prefers-reduced-motion: reduce) {
        .hero-content {
            animation: none;
            opacity: 1;
            transform: none;
        }
    }
</style>
