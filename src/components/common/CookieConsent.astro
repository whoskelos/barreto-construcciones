---
// Cookie Consent Banner - Elegante y no intrusivo
---

<div id="cookie-consent" class="cookie-consent" role="dialog" aria-labelledby="cookie-title" aria-describedby="cookie-description">
    <div class="cookie-content">
        <div class="cookie-text">
            <h3 id="cookie-title" class="cookie-title">Cookies</h3>
            <p id="cookie-description" class="cookie-description">
                Utilizamos cookies para mejorar tu experiencia de navegación, recordar tus preferencias y analizar el uso del sitio. 
                Al aceptar, consientes el uso de cookies según nuestra 
                <a href="/politica-privacidad" class="cookie-link">política de cookies</a>.
            </p>
        </div>
        <div class="cookie-actions">
            <button id="cookie-accept" class="cookie-btn cookie-accept" aria-label="Aceptar cookies">
                Aceptar
            </button>
            <button id="cookie-reject" class="cookie-btn cookie-reject" aria-label="Rechazar cookies">
                Rechazar
            </button>
        </div>
    </div>
</div>

<style>
    .cookie-consent {
        position: fixed;
        bottom: 1.5rem;
        left: 50%;
        transform: translateX(-50%) translateY(120%);
        z-index: 9999;
        max-width: 42rem;
        width: calc(100% - 2rem);
        background: rgba(255, 255, 255, 0.98);
        backdrop-filter: blur(12px);
        border-radius: 1rem;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.12), 0 2px 8px rgba(0, 0, 0, 0.08);
        padding: 1.5rem;
        opacity: 0;
        transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
        border: 1px solid rgba(0, 0, 0, 0.06);
    }

    .cookie-consent.show {
        transform: translateX(-50%) translateY(0);
        opacity: 1;
    }

    .cookie-content {
        display: flex;
        gap: 1.5rem;
        align-items: center;
        flex-wrap: wrap;
    }

    .cookie-text {
        flex: 1;
        min-width: 240px;
    }

    .cookie-title {
        font-size: 1.125rem;
        font-weight: 600;
        color: var(--color-neutral-900);
        margin: 0 0 0.5rem 0;
        letter-spacing: -0.01em;
    }

    .cookie-description {
        font-size: 0.9375rem;
        color: var(--color-neutral-600);
        margin: 0;
        line-height: 1.5;
    }

    .cookie-link {
        color: var(--color-primary-600);
        text-decoration: none;
        font-weight: 500;
        transition: color 0.2s ease;
    }

    .cookie-link:hover {
        color: var(--color-primary-700);
        text-decoration: underline;
    }

    .cookie-actions {
        display: flex;
        gap: 0.75rem;
        flex-shrink: 0;
    }

    .cookie-btn {
        padding: 0.625rem 1.5rem;
        border-radius: 0.5rem;
        font-size: 0.9375rem;
        font-weight: 500;
        cursor: pointer;
        border: none;
        transition: all 0.2s ease;
        white-space: nowrap;
    }

    .cookie-accept {
        background: var(--color-primary-600);
        color: white;
    }

    .cookie-accept:hover {
        background: var(--color-primary-700);
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(237, 99, 9, 0.3);
    }

    .cookie-reject {
        background: var(--color-neutral-100);
        color: var(--color-neutral-700);
    }

    .cookie-reject:hover {
        background: var(--color-neutral-200);
    }

    .cookie-accept:active,
    .cookie-reject:active {
        transform: translateY(0);
    }

    @media (max-width: 640px) {
        .cookie-consent {
            bottom: 1rem;
            width: calc(100% - 1.5rem);
            padding: 1.25rem;
        }

        .cookie-content {
            flex-direction: column;
            gap: 1.25rem;
            align-items: stretch;
        }

        .cookie-actions {
            width: 100%;
        }

        .cookie-btn {
            flex: 1;
            padding: 0.75rem 1rem;
        }

        .cookie-title {
            font-size: 1rem;
        }

        .cookie-description {
            font-size: 0.875rem;
        }
    }

    /* iOS Safari optimizations - Safe area insets */
    @supports (padding: max(0px)) {
        .cookie-consent {
            bottom: max(1.5rem, calc(env(safe-area-inset-bottom, 0px) + 1.5rem));
            left: max(1rem, env(safe-area-inset-left, 1rem));
            right: max(1rem, env(safe-area-inset-right, 1rem));
            width: auto;
            transform: translateX(0) translateY(120%);
        }

        .cookie-consent.show {
            transform: translateX(0) translateY(0);
        }

        @media (max-width: 640px) {
            .cookie-consent {
                bottom: max(1rem, calc(env(safe-area-inset-bottom, 0px) + 1rem));
                left: max(0.75rem, calc(env(safe-area-inset-left, 0px) + 0.75rem));
                right: max(0.75rem, calc(env(safe-area-inset-right, 0px) + 0.75rem));
            }
        }
    }

    /* Optimización táctil para móviles */
    @media (hover: none) and (pointer: coarse) {
        .cookie-btn {
            min-height: 44px; /* Tamaño mínimo recomendado por Apple para elementos táctiles */
        }
    }

    @media (prefers-reduced-motion: reduce) {
        .cookie-consent {
            transition: opacity 0.2s ease;
        }
    }
</style>

<script>
    // Cookie Consent Logic
    const COOKIE_NAME = 'cookie_consent';
    const COOKIE_EXPIRY_DAYS = 365;

    function setCookie(name: string, value: string, days: number) {
        const date = new Date();
        date.setTime(date.getTime() + (days * 24 * 60 * 60 * 1000));
        const expires = `expires=${date.toUTCString()}`;
        document.cookie = `${name}=${value};${expires};path=/;SameSite=Lax`;
    }

    function getCookie(name: string): string | null {
        const nameEQ = `${name}=`;
        const cookies = document.cookie.split(';');
        for (let cookie of cookies) {
            cookie = cookie.trim();
            if (cookie.indexOf(nameEQ) === 0) {
                return cookie.substring(nameEQ.length);
            }
        }
        return null;
    }

    function showCookieBanner() {
        const banner = document.getElementById('cookie-consent');
        if (banner) {
            setTimeout(() => {
                banner.classList.add('show');
            }, 800);
        }
    }

    function hideCookieBanner() {
        const banner = document.getElementById('cookie-consent');
        if (banner) {
            banner.classList.remove('show');
        }
    }

    function loadGoogleAds() {
        // Evitar cargar si ya está cargado
        if (document.getElementById('google-ads-script')) return;

        // ID de Google Ads desde variable de entorno o placeholder
        const GOOGLE_ADS_ID = import.meta.env.PUBLIC_GOOGLE_ADS_ID;

        // Si no hay ID configurado, salir silenciosamente (para producción)
        if (!GOOGLE_ADS_ID || GOOGLE_ADS_ID === 'YOUR_GOOGLE_ADS_ID') {
            if (import.meta.env.DEV) {
                console.warn('Google Ads ID no configurado. Ver documentación en docs/GOOGLE_ADS_SETUP.md');
            }
            return;
        }

        if (import.meta.env.DEV) {
            console.log('Cargando Google Ads con Partytown...');
        }

        // Script principal de Gtag
        const script = document.createElement('script');
        script.id = 'google-ads-script';
        script.type = 'text/partytown';
        script.src = `https://www.googletagmanager.com/gtag/js?id=${GOOGLE_ADS_ID}`;
        document.head.appendChild(script);

        // Script de configuración
        const inlineScript = document.createElement('script');
        inlineScript.type = 'text/partytown';
        inlineScript.innerHTML = `
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date());
            gtag('config', '${GOOGLE_ADS_ID}');
        `;
        document.head.appendChild(inlineScript);
    }

    function initCookieConsent() {
        const consent = getCookie(COOKIE_NAME);
        
        if (!consent) {
            showCookieBanner();
        } else if (consent === 'accepted') {
            loadGoogleAds();
        }

        const acceptBtn = document.getElementById('cookie-accept');
        const rejectBtn = document.getElementById('cookie-reject');

        if (acceptBtn) {
            acceptBtn.addEventListener('click', () => {
                setCookie(COOKIE_NAME, 'accepted', COOKIE_EXPIRY_DAYS);
                hideCookieBanner();
                loadGoogleAds();
            });
        }

        if (rejectBtn) {
            rejectBtn.addEventListener('click', () => {
                setCookie(COOKIE_NAME, 'rejected', 30); // Expira en 30 días
                hideCookieBanner();
            });
        }
    }

    // Inicializar al cargar la página
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initCookieConsent);
    } else {
        initCookieConsent();
    }

    // Reinicializar en navegación con view transitions
    document.addEventListener('astro:after-swap', initCookieConsent);
</script>
