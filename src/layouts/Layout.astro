---
import Footer from "@sections/Footer.astro";
import Header from "@sections/Header.astro";

// import { ClientRouter } from 'astro:transitions';

interface Props {
    title: string | "Barreto Construcciones";
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
        <title>{title}</title>
        <meta name="description" content="Barreto Construcciones" />
        <meta
            name="keywords"
            content="Barreto Construcciones ofrece soluciones profesionales en obra civil, edificación y rehabilitación de edificios en Madrid y Toledo. Expertos en proyectos corporativos e industriales, garantizando calidad, seguridad y cumplimiento en cada obra."
        />
        <meta name="author" content="Barreto Construcciones" />
        <meta
            property="og:description"
            content="Barreto Construcciones ofrece soluciones integrales en construcción, edificación, obra civil, reformas y rehabilitación en Madrid y Toledo. Expertos en proyectos corporativos, industriales y residenciales con garantía, calidad y cumplimiento."
        />
        <meta property="og:image" content="/logo.webp" />
        <meta property="og:url" content="https://barretoconstrucciones.es" />
        <meta property="og:type" content="website" />
        <!-- <ClientRouter /> -->
    </head>
    <body>
        <Header />
        <main>
            <slot />
        </main>
        <Footer />
    </body>
</html>

<style is:global>
    @import "../styles/global.css";
    @import "@fontsource-variable/roboto";
    @plugin "@midudev/tailwind-animations";

    :root {
        --hero-overlay: 210 15% 10%;
        --hero-text: 0 0% 100%;
    }
</style>

<style>
    html,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
        font-family: "Roboto", sans-serif;
        background-color: var(--color-neutral-50);
    }
</style>
