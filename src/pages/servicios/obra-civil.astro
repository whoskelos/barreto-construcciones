---
import { Image } from "astro:assets";

import Layout from "../../layouts/Layout.astro";
import CallToAction from "@components/CallToAction.astro";
import ServiceHero from "@components/services/ServiceHero.astro";

import HeroImage from "@assets/img/services/obra-civil.webp";
import CorporativoImage from "@assets/img/featured/obra_civil/4.webp";
import CheckIcon from "@assets/svg/check-circle.svg";
import FileIcon from "@assets/svg/file-text.svg";
import ShieldIcon from "@assets/svg/shield.svg";
---

<Layout 
    title="Obra Civil en Madrid y Toledo - Urbanización, Pavimentación y Asfaltado | Barreto Construcciones"
    description="Servicios de obra civil en Madrid y Toledo: urbanización, pavimentación, asfaltado, canalizaciones, cimentaciones y muros de contención. Infraestructuras eléctricas y cargadores. Presupuesto gratuito."
    keywords="obra civil Madrid, urbanización, pavimentación Madrid, asfaltado, canalizaciones, cimentaciones, muros contención, infraestructuras eléctricas, cargadores eléctricos"
    canonical="/servicios/obra-civil"
>
    <ServiceHero
        title="Obra Civil"
        HeroImage={HeroImage}
        nameTransition="obra_civil"
    />
    <section
        class="container mx-auto px-4 sm:px-6 lg:px-8 py-16 md:py-24 grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 items-center"
    >
        <div class="space-y-6 md:space-y-8">
            <span
                class="inline-block text-primary-500 text-xs sm:text-sm font-semibold uppercase tracking-wider mb-3 md:mb-4"
                >Características</span
            >
            <h3
                class="text-neutral-900 text-3xl sm:text-4xl md:text-5xl font-bold mb-4 md:mb-6"
            >
                Servicios de Alta Calidad
            </h3>
            <p
                class="text-muted-foreground text-sm sm:text-base leading-relaxed"
            >
                Proyectos de infraestructura y urbanización, tanto públicos como
                privados.
            </p>
            <ul class="flex flex-col space-y-6 md:space-y-8">
                <li class="flex gap-4 items-start animate-fade-in">
                    <div
                        class="flex-shrink-0 w-12 h-12 sm:w-14 sm:h-14 rounded-full bg-primary-500/10 flex items-center justify-center"
                    >
                        <CheckIcon
                            class="w-6 h-6 sm:w-7 sm:h-7 text-primary-500"
                        />
                    </div>
                    <div class="flex-1">
                        <h4 class="text-lg sm:text-xl font-semibold mb-2">
                            Prespuesto Gratuito
                        </h4>
                        <p class="text-neutral-800 text-sm leading-relaxed">
                            Ofrecemos presupuestos detallados sin ningún
                            compromiso para que puedas tomar la mejor decisión.
                        </p>
                    </div>
                </li>
                <li class="flex gap-4 items-start animate-fade-in">
                    <div
                        class="flex-shrink-0 w-12 h-12 sm:w-14 sm:h-14 rounded-full bg-primary-500/10 flex items-center justify-center"
                    >
                        <FileIcon
                            class="w-6 h-6 sm:w-7 sm:h-7 text-primary-500"
                        />
                    </div>
                    <div class="flex-1">
                        <h4 class="text-lg sm:text-xl font-semibold mb-2">
                            Plazos cerrados por escrito
                        </h4>
                        <p class="text-neutral-800 text-sm leading-relaxed">
                            Todos nuestros proyectos incluyen plazos de entrega
                            garantizados y documentados formalmente.
                        </p>
                    </div>
                </li>
                <li class="flex gap-4 items-start animate-fade-in">
                    <div
                        class="flex-shrink-0 w-12 h-12 sm:w-14 sm:h-14 rounded-full bg-primary-500/10 flex items-center justify-center"
                    >
                        <ShieldIcon
                            class="w-6 h-6 sm:w-7 sm:h-7 text-primary-500"
                        />
                    </div>
                    <div class="flex-1">
                        <h4 class="text-lg sm:text-xl font-semibold mb-2">
                            Garantía con seguros de construcción
                        </h4>
                        <p class="text-neutral-800 text-sm leading-relaxed">
                            Todos nuestros proyectos cuentan con seguros de
                            construcción para tu tranquilidad y protección.
                        </p>
                    </div>
                </li>
            </ul>
        </div>
        <div
            class="relative h-[400px] sm:h-[500px] lg:h-[600px] rounded-lg overflow-hidden shadow-xl"
        >
            <Image
                class="w-full h-full object-cover"
                src={CorporativoImage}
                alt="Persona mirando un plano de construcción"
                loading="eager"
            />
        </div>
    </section>
    <CallToAction />
</Layout>
