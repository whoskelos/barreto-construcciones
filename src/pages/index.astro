---
import HeroCarousel from "@components/sections/HeroCarousel.astro";
import Layout from "../layouts/Layout.astro";
import ServiceCard from "@components/ui/ServiceIconCard.astro";
import FeaturedProjects from "@components/sections/FeaturedProjects.astro";

import { getCollection } from "astro:content";
import CallToAction from "@components/sections/CallToAction.astro";

const services = await getCollection("services");
---

<Layout 
    title="Barreto Construcciones - Empresa de Construcción en Madrid y Toledo | +20 Años de Experiencia"
    description="Empresa líder en construcción, edificación, obra civil, reformas y rehabilitación en Madrid y Toledo. Más de 20 años de experiencia en proyectos corporativos, industriales y residenciales. Calidad garantizada."
    keywords="empresa construcción Madrid, construcción Toledo, edificación, obra civil Madrid, reformas empresas, rehabilitación edificios, construcción industrial, proyectos construcción, empresa construcción profesional"
>
    <HeroCarousel />
    <section class="container mx-auto px-4 sm:px-6 lg:px-8 pt-10 pb-16 md:pt-12 md:pb-24" aria-labelledby="services-heading">
        <h2
            id="services-heading"
            class="text-3xl sm:text-4xl md:text-5xl text-neutral-900 text-center font-bold"
        >
            Nuestros servicios
        </h2>
        <p class="text-md text-neutral-800 text-center pb-12">
            Soluciones integrales de construcción y rehabilitación adaptadas a
            sus necesidades
        </p>
        <div
            class="w-full grid grid-cols-1 md:grid-cols-3 lg:grid-cols-5 gap-0 items-stretch"
        >
            {
                services.map((service) => (
                    <ServiceCard
                        name={service.data.title}
                        description={service.data.introDescription}
                        icon={service.data.icon}
                    />
                ))
            }
        </div>
    </section>
    <FeaturedProjects />
    <CallToAction />
</Layout>

