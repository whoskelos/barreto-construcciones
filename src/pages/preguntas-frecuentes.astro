---
import Layout from "../layouts/Layout.astro";
import FAQSection from "@components/FAQSection.astro";
---

<Layout
    title="Preguntas Frecuentes - Barreto Construcciones | FAQ"
    description="Respuestas a las preguntas más frecuentes sobre nuestros servicios de construcción, rehabilitación y obra civil en Madrid y Toledo. Presupuestos, plazos, certificaciones y más."
    keywords="preguntas frecuentes construcción, FAQ construcción Madrid, dudas obra civil, presupuestos construcción, certificaciones construcción"
    canonical="/preguntas-frecuentes"
>
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 pt-12 md:pt-16 pb-8">
        <h1 class="text-4xl md:text-5xl font-bold text-center mb-6 text-gray-900">
            Preguntas Frecuentes
        </h1>
        <p class="text-lg text-center text-gray-600 max-w-3xl mx-auto">
            Encuentra respuestas a las dudas más comunes sobre nuestros servicios de construcción, 
            rehabilitación y obra civil en Madrid y Toledo.
        </p>
    </div>
    
    <FAQSection />
</Layout>
